{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Run Luminara Sandbox",
            "url": "http://localhost:2880/sandbox/",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "serve-sandbox",
            "userDataDir": true,
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--user-data-dir=${workspaceFolder}/.vscode/chrome-debug-profile"
            ],
            "sourceMaps": true,
            "trace": true
        },
        {
            "name": "Run React App in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/test-on-react-app/src",
            "preLaunchTask": "Vite Dev Server",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile/react-app",
            "runtimeArgs": [
                "--remote-debugging-port=9223"
            ]
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}/test-on-react-app/src"
        }
    ]
}