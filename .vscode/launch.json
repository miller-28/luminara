{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Luminara - Run Sandbox",
            "url": "http://localhost:2880/sandbox/",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "serve",
            "userDataDir": true,
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--user-data-dir=${workspaceFolder}/.vscode/chrome-debug-profile"
            ],
            "sourceMaps": true,
            "trace": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Luminara - Lint and Build",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "lint:fix"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "postDebugTask": "build"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Luminara - Lint Only",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "lint:fix"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Luminara - Build Only",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "build"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Luminara - Run Dev",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Luminara - Run CLI Tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "test"
            ],
            "cwd": "${workspaceFolder}/test-cli",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Luminara - Build and Test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "build"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "postDebugTask": "test-cli"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Luminara - Run CLI Benchmarks",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "benchmark"
            ],
            "cwd": "${workspaceFolder}/benchmark",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Luminara - Run Headless Benchmarks",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "benchmark:headless:full"
            ],
            "cwd": "${workspaceFolder}/benchmark",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "serve"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Luminara - Run Browser Benchmarks",
            "url": "http://localhost:2880/benchmark/browser/",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "serve",
            "userDataDir": true,
            "runtimeArgs": [
                "--remote-debugging-port=9222",
                "--user-data-dir=${workspaceFolder}/.vscode/chrome-debug-profile"
            ],
            "sourceMaps": true,
            "trace": true
        }
    ]
}