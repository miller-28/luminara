{
	"name": "@luminara/test-env",
	"version": "1.0.0",
	"description": "Testing environment for Luminara HTTP client - simulates real React application usage",
	"type": "module",
	"private": true,
	"scripts": {
		"test": "node --experimental-fetch testRunner.js",
		"test:basic": "node --experimental-fetch tests/basic.test.js",
		"test:retry": "node --experimental-fetch tests/retry.test.js",
		"test:backoff": "node --experimental-fetch tests/backoff.test.js",
		"test:plugins": "node --experimental-fetch tests/plugins.test.js",
		"test:timeout": "node --experimental-fetch tests/timeout.test.js",
		"test:drivers": "node --experimental-fetch tests/drivers.test.js",
		"test:react-simulation": "node --experimental-fetch tests/reactSimulation.test.js",
		"test:advanced-retry": "node --experimental-fetch tests/advancedRetryPolicies.test.js",
		"test:enhanced-errors": "node --experimental-fetch tests/enhancedErrors.test.js",
		"test:enhanced-interceptors": "node --experimental-fetch tests/enhancedInterceptors.test.js",
		"test:ignore-response-error": "node --experimental-fetch tests/ignoreResponseError.test.js",
		"test:parse-response": "node --experimental-fetch tests/parseResponse.test.js",
		"test:response-types": "node --experimental-fetch tests/responseTypes.test.js",
		"test:watch": "nodemon --experimental-fetch testRunner.js"
	},
	"dependencies": {
		"luminara": "file:../",
		"chalk": "^5.3.0",
		"node-fetch": "^3.3.2"
	},
	"devDependencies": {
		"nodemon": "^3.0.1"
	}
}